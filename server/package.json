{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest test/unit --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest test/integration --runInBand",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest test/e2e --runInBand",
    "test:performance": "node test/performance/load-test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:manual": "node tests/manual-pricing-test.js",
    "test:legacy": "mocha tests/**/*.test.js --timeout 10000",
    "generate:test-data": "node scripts/generate-test-data.js",
    "test:ci": "npm run generate:test-data && npm run test:all",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "start": "node src/server.js",
    "seed:visiting-cards": "node scripts/seed-visiting-cards.js"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true,
    "transform": {}
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Print24 Backend with Global Context-Aware Pricing Engine",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "country-state-city": "^3.2.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "geoip-lite": "^1.4.10",
    "intl-tel-input": "^25.13.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "razorpay": "^2.9.6",
    "redis": "^5.10.0",
    "resend": "^6.6.0",
    "sharp": "^0.34.5",
    "streamifier": "^0.1.1",
    "stripe": "^20.2.0",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "autocannon": "^7.15.0",
    "chai": "^6.2.2",
    "jest": "^29.7.0",
    "mocha": "^11.7.5",
    "supertest": "^6.3.4"
  }
}
