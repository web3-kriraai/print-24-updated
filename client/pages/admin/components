// OrderBulkActions.tsx - Bulk Operations Bar
import React, { useState } from 'react';
import { X, CheckCircle, Download, Trash2, Mail } from 'lucide-react';

interface OrderBulkActionsProps {
    selectedIds: string[];
    onClear: () => void;
    onComplete: () => void;
}

const API_URL = import.meta.env.VITE_API_URL || 'http://localhost:5000';

const OrderBulkActions: React.FC<OrderBulkActionsProps> = ({
    selectedIds,
    onClear,
    onComplete,
}) => {
    const [loading, setLoading] = useState(false);

    const handleBulkUpdate = async (action: string, payload: any) => {
        if (!confirm(`Are you sure you want to ${action} ${selectedIds.length} orders?`)) {
            return;
        }

        setLoading(true);
        try {
            const token = localStorage.getItem('token');
            const response = await fetch(`${API_URL}/api/orders/bulk-update`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    orderIds: selectedIds,
                    action,
                    payload,
                }),
            });

            if (response.ok) {
                alert(`Successfully updated ${selectedIds.length} orders`);
                onClear();
                onComplete();
            } else {
                throw new Error('Bulk update failed');
            }
        } catch (err) {
            alert('Failed to update orders. Please try again.');
            console.error(err);
        } finally {
            setLoading(false);
        }
    };

    const handleBulkDelete = async () => {
        if (!confirm(`⚠️ Are you sure you want to DELETE ${selectedIds.length} orders? This cannot be undone.`)) {
            return;
        }

        setLoading(true);
        try {
            const token = localStorage.getItem('token');
            const response = await fetch(`${API_URL}/api/orders/bulk-delete`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderIds: selectedIds }),
            });

            if (response.ok) {
                alert(`Successfully deleted ${selectedIds.length} orders`);
                onClear();
                onComplete();
            } else {
                throw new Error('Bulk delete failed');
            }
        } catch (err) {
            alert('Failed to delete orders. Please try again.');
            console.error(err);
        } finally {
            setLoading(false);
        }
    };

    const handleExport = async () => {
        try {
            const token = localStorage.getItem('token');
            const response = await fetch(`${API_URL}/api/orders/export`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderIds: selectedIds }),
            });

            if (response.ok) {
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `orders_export_${new Date().toISOString().split('T')[0]}.xlsx`;
                a.click();
                window.URL.revokeObjectURL(url);
            }
        } catch (err) {
            alert('Failed to export orders');
            console.error(err);
        }
    };

    return (
        <div className="bg-indigo-50 border-t border-b border-indigo-200 px-4 py-3">
            <div className="flex items-center justify-between">
                <div className="flex items-center gap-4">
                    <span className="text-sm font-medium text-indigo-900">
                        {selectedIds.length} order{selectedIds.length !== 1 ? 's' : ''} selected
                    </span>

                    {/* Status Update */}
                    <select
                        onChange={(e) => {
                            if (e.target.value) {
                                handleBulkUpdate('UPDATE_STATUS', { status: e.target.value });
                                e.target.value = '';
                            }
                        }}
                        disabled={loading}
                        className="px-3 py-1.5 text-sm border border-indigo-300 rounded-lg bg-white focus:ring-2 focus:ring-indigo-500 disabled:opacity-50"
                    >
                        <option value="">Change Status</option>
                        <option value="APPROVED">Approve</option>
                        <option value="PRODUCTION">Move to Production</option>
                        <option value="PACKED">Mark as Packed</option>
                        <option value="DISPATCHED">Mark as Dispatched</option>
                        <option value="DELIVERED">Mark as Delivered</option>
                        <option value="CANCELLED">Cancel</option>
                    </select>

                    {/* Payment Update */}
                    <select
                        onChange={(e) => {
                            if (e.target.value) {
                                handleBulkUpdate('UPDATE_PAYMENT', { paymentStatus: e.target.value });
                                e.target.value = '';
                            }
                        }}
                        disabled={loading}
                        className="px-3 py-1.5 text-sm border border-indigo-300 rounded-lg bg-white focus:ring-2 focus:ring-indigo-500 disabled:opacity-50"
                    >
                        <option value="">Update Payment</option>
                        <option value="COMPLETED">Mark Paid</option>
                        <option value="PENDING">Mark Pending</option>
                        <option value="REFUNDED">Mark Refunded</option>
                    </select>

                    {/* Export Button */}
                    <button
                        onClick={handleExport}
                        disabled={loading}
                        className="flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-indigo-700 bg-white border border-indigo-300 rounded-lg hover:bg-indigo-50 disabled:opacity-50"
                    >
                        <Download size={16} />
                        Export
                    </button>

                    {/* Delete Button */}
                    <button
                        onClick={handleBulkDelete}
                        disabled={loading}
                        className="flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-red-700 bg-white border border-red-300 rounded-lg hover:bg-red-50 disabled:opacity-50"
                    >
                        <Trash2 size={16} />
                        Delete
                    </button>
                </div>

                {/* Clear Selection */}
                <button
                    onClick={onClear}
                    disabled={loading}
                    className="flex items-center gap-1 text-sm font-medium text-indigo-700 hover:text-indigo-900 disabled:opacity-50"
                >
                    <X size={16} />
                    Clear
                </button>
            </div>

            {loading && (
                <div className="mt-2">
                    <div className="flex items-center gap-2 text-sm text-indigo-700">
                        <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-indigo-700"></div>
                        Processing...
                    </div>
                </div>
            )}
        </div>
    );
};

export default OrderBulkActions;
